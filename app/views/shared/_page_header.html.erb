<%# 接受變數: title (字串), back_path (路徑) %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-800">
    <%= title %>
  </h1>

  <% if local_assigns[:back_path] %>
    <%= link_to t('tasks.form.back'), back_path, 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded shadow transition duration-200 uppercase text-sm tracking-wider" %>
  <% end %>
</div>
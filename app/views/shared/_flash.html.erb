<%# app/views/shared/_flash.html.erb %>
<div class="fixed top-5 right-5 z-50 flex flex-col gap-2 w-full max-w-sm">
  <% flash.each do |key, value| %>
    <%# 定義樣式變數 %>
    <% is_notice = (key == 'notice') %>
    <% type_class = is_notice ? "bg-green-50 border-green-500 text-green-800" : "bg-red-50 border-red-500 text-red-800" %>
    <% icon_color = is_notice ? "text-green-500" : "text-red-500" %>
    
    <div data-controller="flash" 
         class="transform transition-all duration-500 ease-out translate-x-0 opacity-100 flex items-start p-4 border-l-4 rounded-r shadow-lg <%= type_class %>"
         role="alert">
      
      <%# 左側圖示區 %>
      <div class="flex-shrink-0">
        <% if is_notice %>
          <svg class="h-5 w-5 <%= icon_color %>" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class="h-5 w-5 <%= icon_color %>" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>

      <%# 文字內容區 %>
      <div class="ml-3 w-full">
        <p class="text-sm font-medium">
          <%= value %>
        </p>
      </div>

      <%# 關閉按鈕 %>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button type="button" 
                  data-action="flash#dismiss"
                  class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 <%= is_notice ? 'focus:ring-green-500 hover:bg-green-100 text-green-500' : 'focus:ring-red-500 hover:bg-red-100 text-red-500' %>">
            <span class="sr-only">Close</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
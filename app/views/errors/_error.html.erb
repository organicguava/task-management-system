<%# 共用的錯誤頁面 partial %>
<%# 參數: code (錯誤代碼), color_class (顏色 class，需傳入完整 class 名稱) %>

<% color_class ||= "text-gray-300" %>

<div class="flex flex-col items-center justify-center text-center px-4">
  <%# 錯誤代碼 %>
  <h1 class="text-9xl font-bold <%= color_class %>">
    <%= code %>
  </h1>
  
  <%# 標題 %>
  <h2 class="mt-4 text-2xl font-semibold text-gray-800">
    <%= t(:title, scope: [:errors, code]) %>
  </h2>
  
  <%# 說明文字 %>
  <p class="mt-2 text-gray-600">
    <%= t(:description, scope: [:errors, code]) %>
  </p>
  
  <%# 返回首頁按鈕 %>
  <%= link_to t(:back_to_home, scope: :errors), root_path,
      class: "mt-8 inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-150" %>
</div>

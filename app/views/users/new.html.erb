<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        <%= t("users.new.title") %>
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        <%= t("users.new.register_prefix") %>
        <%= link_to t("users.new.login_link"), login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>

    <%# 掛載 Stimulus Controller (表單欄位若無值，送出按鈕會被禁用) %>
    <%= form_with(model: @user, local: true, class: "mt-8 space-y-6", data: { controller: "form-validation" }) do |f| %>      
      <%# 錯誤訊息顯示區塊 %>
      <% if @user.errors.any? %>
        <div class="rounded-md bg-red-50 p-4 mb-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "個錯誤") %> <%= t("users.new.error_heading") %>
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= f.label :name, User.human_attribute_name(:name), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, required: true, 
            data: { form_validation_target: "input", action: "input->form-validation#validate" },
            class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: t("users.new.title") 
          %>
        </div>
        
        <div class="mb-4">
          <%= f.label :email, User.human_attribute_name(:email), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autocomplete: "email", required: true,
              data: { form_validation_target: "input", action: "input->form-validation#validate" },
              class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "user@example.com"
           %>
        </div>

        <div class="mb-4">
          <%= f.label :password, User.human_attribute_name(:password), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "new-password", required: true,
            data: { form_validation_target: "input", action: "input->form-validation#validate" }, 
            class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation), class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
              data: { form_validation_target: "input", action: "input->form-validation#validate" },
            class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.submit t("users.new.submit"), 
        data: { form_validation_target: "submit" },
        class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out opacity-50 cursor-not-allowed", 
        disabled: true %>      
      </div>
    <% end %>
  </div>
</div>

<%= form_with model: @task do |form| %>
  <div>
    <span class="text-red-500 mr-1">*</span><%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div class="mb-4">
    <%= form.label :end_time, class: "block text-gray-700 font-bold mb-2" %><br>
    <%= form.datetime_field :end_time, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :status, class: "block text-gray-700 font-bold mb-2" do %>
       <span class="text-red-500 mr-1">*</span><%= Task.human_attribute_name(:status) %>
    <% end %>
    
    <%= tailwind_select(form, :status, Task.statuses.keys.map { |k| [t("activerecord.enums.task.status.#{k}"), k] }) %>
  </div>

  <div class="mb-4">
    <%= form.label :priority, class: "block text-gray-700 font-bold mb-2" do %>
      <span class="text-red-500 mr-1">*</span><%= Task.human_attribute_name(:priority) %>
    <% end %>

    <%= tailwind_select(form, :priority, Task.priorities.keys.map { |k| [t("activerecord.enums.task.priority.#{k}"), k] }) %>
  </div>

  <div>
    <%# 判斷 form 的物件是否為新紀錄(new or edit)；補充：form.object指的是這個表單綁定的物件（也就是 @task） %>
    <% button_text = form.object.new_record? ? t('tasks.form.submit') : t('tasks.form.update') %>
    <%= form.submit button_text %>
  </div>
<% end %>


<%= form_with(model: task, class: "space-y-6 bg-white p-8 rounded-lg shadow-md border border-gray-100") do |form| %>  
    <%# 標題欄位 (Title) %>
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" do %>
        <span class="text-red-500 mr-1">*</span><%= Task.human_attribute_name(:title) %>
      <% end %>
      <%= form.text_field :title, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm placeholder-gray-400 py-3", placeholder: "例如：完成每週進度報告" %>
    </div>

    <%# 內容欄位 (Text Area) %>
    <div>
        <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :content, rows: 4, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm placeholder-gray-400", placeholder: "請輸入任務詳細內容..." %>
    </div>

    <%# 結束時間 %>
    <div>
      <%= form.label :end_time, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.datetime_field :end_time, class: "block w-full sm:w-1/2 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm text-gray-600 cursor-pointer" %>
    </div>

    <%# 狀態與優先級 %>
    <div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <%# 狀態 Select %>
        <div>
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" do %>
            <span class="text-red-500 mr-1">*</span><%= Task.human_attribute_name(:status) %>
          <% end %>
          <div class="relative">
            <%= form.select :status, 
                Task.statuses.keys.map { |k| [t("activerecord.enums.task.status.#{k}"), k] }, 
                { prompt: "Select" }, 
                class: "appearance-none block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2 pl-3 pr-10 cursor-pointer" %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-500">
              <%= inline_svg_icon("icons/chevron-down.svg", class: "h-4 w-4") %>
            </div>
          </div>
        </div>

        <%# 優先級 Select %>
        <div>
          <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-1" do %>
            <span class="text-red-500 mr-1">*</span><%= Task.human_attribute_name(:priority) %>
          <% end %>
          <div class="relative">
            <%= form.select :priority, 
                Task.priorities.keys.map { |k| [t("activerecord.enums.task.priority.#{k}"), k] }, 
                { prompt: "Select" }, 
                class: "appearance-none block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2 pl-3 pr-10 cursor-pointer" %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-500">
              <%= inline_svg_icon("icons/chevron-down.svg", class: "h-4 w-4") %>
            </div>
          </div>
        </div>
      </div>
    </div>

  <%# 標籤（多選）%>
  <div>
    <%= form.label :tag_ids, Task.human_attribute_name(:tags), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="flex flex-wrap gap-3 mt-2">
      <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name do |b| %>
        <label class="inline-flex items-center cursor-pointer">
          <%= b.check_box class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          <span class="ml-2 text-sm text-gray-700"><%= b.text %></span>
        </label>
      <% end %>
    </div>
  </div>

  <%# 提交按鈕%>
  <div class="pt-8 flex items-center justify-start mt-6">
    <% button_text = form.object.new_record? ? t('tasks.form.submit') : t('tasks.form.update') %>
    
    <%= form.submit button_text, class: "cursor-pointer bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-8 rounded shadow focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition uppercase tracking-wider" %>
  </div>

<% end %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800"><%= t('tasks.index.header') %></h1>
    
    <%= link_to t('tasks.index.create_button'), new_task_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-200" %>
  </div>

  <div class="flex justify-end mb-4">
    <details class="relative group">
    <summary class="list-none cursor-pointer text-gray-700 py-2 px-4 inline-flex items-center hover:bg-gray-50">
        <span>排序方式</span>
        
        <svg class="ml-2" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12.6668 6L8.00016 10.6667L3.3335 6" stroke="#B4BAC3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </summary>

      <div class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded shadow-xl z-50">
        <div class="py-1">
          <%= sort_link 'created_at', Task.human_attribute_name(:created_at), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 w-full text-left !no-underline" %>
          
          <%= sort_link 'end_time', Task.human_attribute_name(:end_time), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 w-full text-left !no-underline" %>
          </div>
      </div>
    </details>
  </div>

  <div class="overflow-x-auto bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
            <%= Task.human_attribute_name(:title) %>
          </th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
            <%= Task.human_attribute_name(:content) %>
          </th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
             <%= sort_link 'end_time', Task.human_attribute_name(:end_time) %>
          </th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
            <%= t('tasks.index.actions') %>
          </th>
        </tr>
      </thead>
      
      <tbody>
        <% @tasks.each do |task| %> <tr class="hover:bg-gray-50 transition duration-150">
            <td class="px-5 py-5 border-b border-gray-200 text-sm">
              <p class="text-gray-900 whitespace-no-wrap font-medium">
                <%= task.title %> </p>
            </td>

            <td class="px-5 py-5 border-b border-gray-200 text-sm">
              <p class="text-gray-600 whitespace-no-wrap">
                <%= task.content %> </p>
            </td>

            <td class="px-5 py-5 border-b border-gray-200 text-sm">
              <p class="text-gray-900 whitespace-no-wrap">
                <%= task.end_time&.strftime('%Y-%m-%d %H:%M') %>
              </p>
            </td>

            <td class="px-5 py-5 border-b border-gray-200 text-sm">
              <div class="flex items-center space-x-4">
                <%= link_to t('action.edit'), edit_task_path(task), class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
                
                <%= link_to t('action.delete'), task_path(task), 
                    data: { 
                      turbo_method: :delete, 
                      turbo_confirm: t('action.confirm_delete', title: task.title) 
                    }, 
                    class: "text-red-600 hover:text-red-900 font-medium" 
                %>
              </div>
            </td>
          </tr>
        <% end %> </tbody>
    </table>
  </div>
</div>